<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.passbolt.mobile.android.core.ui.toolbar.defaulttoolbar.TitleToolbar
            android:id="@+id/toolbar"
            style="@style/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            app:toolbarTitle="@string/settings_app_settings" />

        <com.passbolt.mobile.android.core.ui.menu.SwitchSettingView
            android:id="@+id/fingerprintSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            app:icon="@drawable/ic_fingerprint"
            app:name="@string/settings_app_settings_fingerprint" />

        <com.passbolt.mobile.android.core.ui.menu.OpenableSettingView
            android:id="@+id/autofillSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_key"
            app:name="@string/settings_app_settings_autofill" />

        <com.passbolt.mobile.android.core.ui.menu.OpenableSettingView
            android:id="@+id/defaultFilterSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_filter"
            app:name="@string/settings_app_settings_default_filter" />
    </LinearLayout>
</ScrollView>
