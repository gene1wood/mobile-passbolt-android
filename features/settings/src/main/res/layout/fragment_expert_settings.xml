<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/settingsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.passbolt.mobile.android.core.ui.toolbar.defaulttoolbar.TitleToolbar
            android:id="@+id/toolbar"
            style="@style/Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            app:toolbarTitle="@string/settings_app_settings_expert_settings" />

        <com.passbolt.mobile.android.core.ui.menu.SwitchSettingView
            android:id="@+id/developerModeSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_32"
            app:icon="@drawable/ic_dev_mode"
            app:name="@string/settings_app_settings_expert_settings_dev_mode" />

        <com.passbolt.mobile.android.core.ui.menu.SwitchSettingView
            android:id="@+id/hideRootWarningSetting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_hash"
            app:name="@string/settings_app_settings_expert_settings_hide_root" />

    </LinearLayout>
</ScrollView>
